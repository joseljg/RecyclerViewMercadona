<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/material_dynamic_neutral90"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_item_rv_productos"
        android:layout_width="289dp"
        android:layout_height="139dp"
        android:layout_weight="1"
        android:padding="5dp"
        app:srcCompat="@drawable/producto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nombre_item_rv_productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="aqui va el nombre"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_cantidad_item_rv_productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="aqui va la cantidad"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_descripcion_item_rv_productos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Aqui va la descripcion"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>